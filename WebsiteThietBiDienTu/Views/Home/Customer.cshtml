@model IEnumerable<WebsiteThietBiDienTu.Models.Diachi>;
@{ ViewData["Title"] = "Thông tin tài khoản"; }
<div class="d-flex justify-content-between mb-3">
    <div><h2>Thông tin tài khoản</h2></div>
    <div><a class="btn btn-outline-info" asp-action="DonHangChuaDuyet">Lịch sử đặt hàng</a></div>
</div>

<div class="col-2"></div>
<div class="col-8 justify-content-center align-items-center">
    <dl class="row">
        <dt class="col-sm-2">
            Tên người dùng
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.Ten
        </dd>
        <dt class="col-sm-2">
            Số diện thoại
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.DienThoai
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @ViewBag.khachhang.Email
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col" class="text-center">Mặc định</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int stt = 1;
                        foreach (Diachi i in Model)
                        {
                            string tmp = i.DiaChi1 + ", " + i.PhuongXa + ", " + i.QuanHuyen + ", " + i.TinhThanh;
                            <tr>
                                <td>@stt</td>
                                <td>@tmp</td>
                                @if (i.MacDinh == 1)
                                {
                                    <td class="text-center"><i class="bi bi-check-circle-fill"></i></td>
                                    <td></td>
                                }
                                else
                                {
                                    <td class="text-center" action="SetAddressDefault"><a class="btn btn-outline-success" asp-action="SetDefaultAddress" asp-route-id="@i.MaDc">Đặt làm mặc định</a></td>
                                    <td><a class="btn btn-outline-danger" asp-action="DeleteAddress" asp-route-id="@i.MaDc">Xóa</a></td>
                                }

                            </tr>
                            stt++;
                        } }
                </tbody>



            </table>
        </dd>
    </dl>
</div>
<div class="col-2 justify-content-center align-items-center">
    <a class="btn text-white" asp-action="EditCustomer">Chỉnh sửa thông tin</a>
    <a class="btn text-white" asp-action="AddAddress">Thêm địa chỉ</a>
    <a class="btn text-white" asp-action="Logout">Đăng xuất <i class="bi bi-box-arrow-right"></i></a>
</div>
<div class="col-2"></div>
