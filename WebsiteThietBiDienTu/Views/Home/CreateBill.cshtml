@model List<WebsiteThietBiDienTu.Models.CartItem>

<div class="col-3"></div>
<div class="col-6">
    <h3 class="text-center text-primary">Đơn hàng của quý khách đã đặt thành công</h3>
    <h4 class="text-center text-primary">Chi tiết đơn hàng</h4>
    @if (Model.Count > 0)
    {
        int stt = 1;
        int thanhtien = 0;
        int tongtien = 0;
        <table class="table">
            <tr>
                <th>STT</th>
                <th>San Pham</th>
                <th>Gia</th>
                <th>So Luong</th>
                <th></th>
                <th>Tổng tiền</th>
            </tr>
            @foreach (var i in Model)
            {
                thanhtien = i.SanPham.GiaBan * i.SoLuong;
                tongtien += thanhtien;
                <tr class="align-middle">
                    <td>@(stt++)</td>
                    <td>
                        <img src="~/images/products/@(i.SanPham.HinhAnh)" class="img-thumbnail" width="50" />
                        @(i.SanPham.Ten)
                    </td>
                    <td>
                        @(i.SanPham.GiaBan.ToString("n0"))VND
                    </td>

                    <td>
                        @(i.SoLuong)
                    </td>
                    <td>@(thanhtien.ToString("n0"))đ</td>

                </tr>
            }
            <tr>
                <td colspan="5" class="text-end">
                    Thanh tien
                </td>
                <td class="text-danger fw-bold">
                    @tongtien.ToString("n0")VND
                </td>
            </tr>
        </table>
    }
</div>
<div class="col-3"></div>
