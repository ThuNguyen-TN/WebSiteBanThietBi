
<h3 class="text-center">Tin tức nổi bật</h3>
<div class="container-fluid">
    <div class="row">
        @foreach (var news in (List<Tintuc>)ViewBag.tintuc)
        {

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="d-flex">
                        <div class="col-md-4">
                            <img src="/images/news/@news.HinhAnh" width="100%" height="100%">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body justify-content-center">
                                <h5 class="card-title"><a asp-action="TinTuc" asp-route-id="@news.MaTin" class="text-decoration-none">@news.TieuDe</a></h5>
                                <p class="card-text">Tom tat tin: @news.TomTat</p>
                                <p class="card-text">@news.NgayDang</p>
                            </div>
                        </div>
                        <div class="col-md-2">

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
