
@{
    ViewData["Title"] = "Sửa thông tin tài khoản";
}
<div class="container">
    <div class="row justify-content-center">
        <h3 class="col-md-4 text-success">Sửa thông tin tài khoản</h3>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 ">
            <form asp-action="EditCustomer">
                <div class="my-3">
                    <input type="hidden" name="id" value="@ViewBag.khachhang.MaKh" />
                    <label>Họ tên</label>
                    <input type="text" name="hoten" class="form-control" value="@ViewBag.khachhang.Ten" />
                </div>
                <div class="my-3">
                    <label>Số điện thoại</label>
                    <input type="text" name="sodienthoai" class="form-control" value="@ViewBag.khachhang.DienThoai" />
                </div>
                <div class="my-3">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control" value="@ViewBag.khachhang.Email" />
                </div>
                <div class="my-3">
                    <label>Mật khẩu mới</label>
                    <input type="text" name="matkhau" class="form-control" />
                </div>
                <div class="d-grid">
                    <input type="submit" value="Chỉnh sửa" class="btn btn-info btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>
