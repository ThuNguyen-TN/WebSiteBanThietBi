@model WebsiteThietBiDienTu.Models.Khachhang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa khách hàng</h1>

<h3>Bạn có muốn xóa khách hàng này không?</h3>
<div>
    <h4>Khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Tên khách hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2">
            Điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaKh" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a  class="btn btn-outline-primary" asp-action="Index">Trở về trang chủ</a>
    </form>
</div>
