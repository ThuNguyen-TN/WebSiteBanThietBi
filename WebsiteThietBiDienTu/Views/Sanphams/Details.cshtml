@model WebsiteThietBiDienTu.Models.Sanpham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Chi tiết sản phẩm</h1>

<div>
    <h4 class="mx-auto">Sản phẩm</h4>
    <hr />
    <dl class="row mx-auto">
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2">
           Giá gốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaGoc)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            Hình ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/products/@Html.DisplayFor(model => model.HinhAnh)" class="img-thumbnail" width="100" />
        </dd>
        <dt class = "col-sm-2">
            Lượt xem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LuotXem)
        </dd>
        <dt class = "col-sm-2">
           Lượt mua
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LuotMua)
        </dd>
        <dt class = "col-sm-2">
            Danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaDmNavigation.Ten)
        </dd>
    </dl>
</div>
<div class="mx-auto">
    <a asp-action="Edit" asp-route-id="@Model.MaMh">Chỉnh sửa</a> |
    <a asp-action="Index">Trang chủ</a>
</div>
