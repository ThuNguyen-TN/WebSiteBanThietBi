            <div class="col-lg-6 col-md-4 col-12 justify-content-center">
                <form class="form-inline d-flex mx-auto" asp-action="Index">
                    <input class="form-control ml-sm-2 mx-auto" type="text" placeholder="Search" name="search">
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
            <div class="col-lg-3 col-md-4 col-12">
                <ul class="navbar-nav justify-content-end mx-auto padding-top-0">
                    @if (ViewBag.khachhang != null)
                    {
        <a class="nav-link text-white fw-bold link-primary" aria-current="page" asp-action="Customer" asp-controller="Home">
