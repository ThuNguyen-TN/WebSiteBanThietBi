            <div class="col-lg-6 col-md-4 col-12 justify-content-center">
                <form class="form-inline d-flex mx-auto" asp-action="Index">
                    <input class="form-control ml-sm-2 mx-auto" type="text" placeholder="Search" name="search">
                    <span><button class="btn btn-primary" type="submit">Search</button></span>
                </form>
            </div>
            <div class="col-lg-3 col-md-4 col-12">
