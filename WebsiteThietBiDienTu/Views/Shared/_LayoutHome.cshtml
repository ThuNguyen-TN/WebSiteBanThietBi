            <div class="container px-4 px-lg-5">
                <div class="col-lg-3 col-md-4 col-12">
                    <a class="navbar-brand" href="#!">Start Bootstrap</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="col-lg-6 col-md-4 col-12">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav justify-content-center mx-auto">
                            <li class="nav-item"><a class="nav-link text-dark fw-bold link-primary" aria-current="page" asp-action="Index" asp-controller="Home">Trang Chủ</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-bold link-primary" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sản Phẩm</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var i in (List<Danhmuc>)ViewBag.danhmuc)
                                    {
                        <li><a asp-action="CategoryName" asp-route-id="@(i.MaDm)">@i.Ten</a></li>
}
                                </ul>
                            </li>
                            <li class="nav-item text-dark"><a class="nav-link text-dark fw-bold link-primary" href="#!">About</a></li>
                            <li class="nav-item"><a class="nav-link text-dark fw-bold link-primary" aria-current="page" asp-action="TinTuc">Tin Tức</a></li>
                            <li class="nav-item"><a class="nav-link text-dark fw-bold link-primary" aria-current="page" href="#!">Liên Hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-12">

                    <a class="btn btn-outline-primary bg-primary text-white">
                        <i class="bi-cart-fill me-1"></i>
                        Giỏ Hàng
                        <span class="badge bg-dark text-white ms-1 rounded-pill">@ViewData["soluong"]</span>
                    </a>

                </div>
            </div>
        </nav>
    </div>
    
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            @RenderBody()
        </div>
    </section>
            
