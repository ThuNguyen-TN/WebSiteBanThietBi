@model WebsiteThietBiDienTu.Models.Danhmuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mx-auto">Chi tiết danh mục</h1>

<div>
    <h4 class="mx-auto">Danh mục</h4>
    <hr />
    <dl class="row mx-auto">
        <dt class = "col-sm-2">
           Tên danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
    </dl>
</div>
<div class="mx-auto">
    <a class="btn btn-outline-warning mx-auto" asp-action="Edit" asp-route-id="@Model.MaDm">Chỉnh sửa</a> 
    <a class="btn btn-outline-primary" asp-action="Index">Trở về trang chủ</a>
</div>
